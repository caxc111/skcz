/* 语音识别组件样式 */
.voice-recognition {
  display: flex;
  flex-direction: column;
  align-items: left;
  width: 100%;
  padding: 20rpx 0;
}

/* 头部样式 */
.voice-header {
  width: 100%;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  text-align: center;
}

.voice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.voice-subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 语言切换样式 */
.language-switcher {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.language-switcher view {
  padding: 10rpx 30rpx;
  border: 1px solid #7AC23D;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #7AC23D;
  background-color: #fff;
}

.language-switcher view.active {
  background-color: #7AC23D;
  color: #fff;
  border-color: #7AC23D;
}

/* 录音按钮区域 */
.record-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.record-status-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.record-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: -20rpx;
  box-shadow: none;
  transition: all 0.3s;
}

.record-button.recording {
  background-color: transparent;
  transform: scale(1.1);
  box-shadow: none;
}

.mic-icon {
  width: 60rpx;
  height: 60rpx;
  filter: invert(66%) sepia(58%) saturate(486%) hue-rotate(44deg) brightness(95%) contrast(86%); 
}

.record-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

/* 识别结果区域 */
.result-area {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 120rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-text {
  min-height: 400rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 1.6;
}

.clear-result {
  text-align: right;
  font-size: 24rpx;
  color: #42a5e2;
  padding: 10rpx;
} 