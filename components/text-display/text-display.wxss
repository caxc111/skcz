/* components/text-display/text-display.wxss */

.text-display {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.text-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.language-tag {
  font-size: 28rpx;
  color: #888;
  padding: 4rpx 16rpx;
  background-color: #f8f8f8;
  border-radius: 20rpx;
}

.toggle-btn {
  font-size: 28rpx;
  color: #07c160;
  padding: 4rpx 16rpx;
  border: 1rpx solid #07c160;
  border-radius: 20rpx;
}

.text-content {
  width: 100%;
  max-height: 70vh;
}

.content-area {
  width: 100%;
  padding: 10rpx 0;
  text-align: justify;
}

.segment {
  display: inline;
}

.hidden-content {
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #888;
  font-size: 32rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.editable {
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 16rpx;
}

.edit-textarea {
  width: 100%;
  min-height: 400rpx;
  max-height: 60vh;
}

/* 朗读模式特殊样式 */
.read-mode .segment {
  transition: background-color 0.3s;
}

.read-mode .segment.active {
  background-color: rgba(7, 193, 96, 0.1);
}

/* 背诵模式特殊样式 */
.recite-mode .content-area {
  font-size: 34rpx;
} 