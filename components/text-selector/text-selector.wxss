/* components/text-selector/text-selector.wxss */
.selector-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.grade-list, .semester-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.grade-item, .semester-item {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.grade-item.active, .semester-item.active {
  background-color: #92e242;
  color: #fff;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-import {
  flex: 1;
  height: 80rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 8rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  border: none;
}

.actions {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  border: none;
}

.btn-confirm {
  background-color: #1890ff;
  color: white;
  border: none;
  margin-left: 20rpx;
} 