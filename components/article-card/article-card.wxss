.article-card {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.article-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.lang-tag {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
  margin-right: 10px;
}

.lang-tag.zh {
  background-color: #aff157;
  color: #333333;
}

.lang-tag.en {
  background-color: #57b2ff;
  color: #ffffff;
}

.article-title {
  font-size: 16px;
  font-weight: bold;
  flex: 1;
}

.article-preview {
  font-size: 14px;
  color: #666666;
  margin-bottom: 12px;
  line-height: 1.5;
}

.article-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #999999;
}