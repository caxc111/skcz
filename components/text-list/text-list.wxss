.text-list {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.text-list-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  max-height: 80vh;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  overflow-y: auto;
}

.text-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.text-section {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.text-title {
  font-size: 32rpx;
  color: #333;
} 