/* pages/student/profile/profile.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #f8f8f8;
  min-height: 100vh;
  overflow-x: hidden; /* 防止水平滚动 */
}

/* --- 已登录状态样式 --- */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  padding: 30rpx 0; /* 减少上下 padding */
  margin-bottom: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 15rpx; /* 减少间距 */
  border-radius: 50%;
  border: 4rpx solid #eee;
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx; /* 增加下方间距 */
}

/* 小红花组件容器 */
.flower-area {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fff7e6; /* 淡黄色背景 */
  border-radius: 30rpx;
  border: 1rpx solid #ffe5b3;
}

.stats-section {
  width: calc(100% - 40rpx);
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff5c5c;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

.actions {
  width: calc(100% - 40rpx);
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.actions button {
  margin: 0 10rpx;
}

/* --- 未登录状态样式 --- */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
}

.default-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.login-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 60%;
}

/* 加载指示器 */
.loading-indicator {
  text-align: center;
  padding: 40rpx;
  color: #999;
} 