.student-selector {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 12px 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow-down {
  color: #999;
  font-size: 12px;
}

.overview-card {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.overview-title, .section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 16px;
}

.overview-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.overview-item {
  text-align: center;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.overview-value {
  font-size: 20px;
  font-weight: bold;
  color: #aff157;
}

.overview-label {
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}

.recent-activity {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.timeline-item {
  display: flex;
  margin-bottom: 16px;
  position: relative;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 80px;
  top: 24px;
  bottom: -16px;
  width: 1px;
  background-color: #e0e0e0;
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-date {
  width: 80px;
  font-size: 12px;
  color: #999;
  padding-top: 2px;
}

.timeline-content {
  flex: 1;
  padding-left: 20px;
}

.timeline-title {
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 5px;
}

.timeline-detail {
  font-size: 12px;
  color: #666;
}

.highlight {
  color: #ffa640;
  font-weight: 500;
}

.performance-chart {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.chart-container {
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder-chart {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  background-color: #f8f8f8;
  border-radius: 8px;
}