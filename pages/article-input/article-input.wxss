/* pages/article-input/article-input.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 表单项 */
.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #eee;
  height: 80rpx;
  line-height: 40rpx;
}

.textarea {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 300rpx;
  line-height: 40rpx;
  border: 1px solid #eee;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s;
}

.radio-label.active {
  background-color: #e9fbcc;
  color: #92e242;
  font-weight: bold;
}

.radio-label radio {
  transform: scale(0.8);
  margin-right: 4rpx;
}

/* 按钮样式 */
.btn-container {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
}

.btn-submit {
  background-color: #92e242;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  width: 80%;
  box-shadow: 0 6rpx 10rpx rgba(146, 226, 66, 0.2);
} 