<!--pages/voice-test/voice-test.wxml-->
<view class="container">
  <view class="header">
    <view class="title">语音测试</view>
    <view class="subtitle">测试语音识别功能</view>
  </view>
  
  <view class="content-area">
    <!-- 使用封装的语音识别组件 -->
    <voice-recognition
      title=""
      subtitle=""
      bind:start="handleRecordStart"
      bind:stop="handleRecordStop"
      bind:result="handleRecordResult"
      bind:error="handleRecordError"
      bind:languageChange="handleLanguageChange">
    </voice-recognition>
    
    <!-- 提示区域 -->
    <view class="tip-area" wx:if="{{!recognizedText}}">
      <view class="tip-text">
        语音识别提示:
        <view>1. 请在安静环境下进行录音</view>
        <view>2. 语速保持正常，发音清晰</view>
        <view>3. 尽量避免背景噪音</view>
      </view>
    </view>
  </view>
  
  <!-- 底部按钮区域 -->
  <view class="footer">
    <button class="back-button" bindtap="goBack">返回</button>
  </view>
</view> 