/* pages/voice-test/voice-test.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 内容区域 */
.content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

/* 提示区域 */
.tip-area {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部按钮区域 */
.footer {
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.back-button {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
} 