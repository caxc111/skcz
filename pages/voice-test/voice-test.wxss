/* pages/voice-test/voice-test.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 语言切换样式 */
.language-switcher {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.lang-btn {
  padding: 10rpx 30rpx;
  border: 1px solid #ccc;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #555;
  background-color: #fff;
}

.lang-btn.active {
  background-color: #42a5e2;
  color: #fff;
  border-color: #42a5e2;
}

/* 内容区域 */
.content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

/* 录音按钮区域 */
.record-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.record-status-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.record-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #42a5e2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(66, 165, 226, 0.3);
  transition: all 0.3s;
}

.record-button.recording {
  background-color: #e25842;
  transform: scale(1.1);
  box-shadow: 0 8rpx 16rpx rgba(226, 88, 66, 0.4);
}

.record-icon {
  width: 80rpx;
  height: 80rpx;
}

.record-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

/* 识别结果区域 */
.result-area {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  border-left: 6rpx solid #42a5e2;
  padding-left: 20rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.clear-result {
  text-align: right;
  font-size: 24rpx;
  color: #42a5e2;
  padding: 10rpx;
}

/* 提示区域 */
.tip-area {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部按钮区域 */
.footer {
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
}

.back-button {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
} 