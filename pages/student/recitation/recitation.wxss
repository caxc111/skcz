  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.complete-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4cd964;
  margin-bottom: 20rpx;
