/* 背诵结果页面样式 */
.recitation-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}

.result-score-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.result-score {
  font-size: 72rpx;
  font-weight: bold;
  color: #4cd964;
  margin-bottom: 20rpx;
}

.score-unit {
  font-size: 36rpx;
  margin-left: 10rpx;
}

.result-flowers {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.flower-img {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
}

.result-feedback {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  width: 90%;
}

.result-details {
  width: 100%;
  margin-top: 30rpx;
}

.result-accuracy {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.result-content-section {
  margin-bottom: 30rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  width: 100%;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.marked-content {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
}

.recognized-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-wrap: break-word;
}

.result-actions {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 40rpx;
}

/* 错误标记样式 */
.correct-text {
  color: #333;
}

.error-text {
  color: #ff3b30;
  text-decoration: line-through;
}

.missing-text {
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
} 