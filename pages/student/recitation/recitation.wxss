/* 背诵模式样式 */
.recitation-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 调试信息样式 */
.debug-info {
  padding: 10rpx;
  margin-bottom: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
  max-height: 200rpx;
  overflow-y: auto;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
  text-align: center;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
  margin-top: 20rpx;
}

/* 错误状态样式 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
  text-align: center;
  padding: 40rpx;
}

.error-text {
  font-size: 32rpx;
  color: #ff3b30;
  margin-bottom: 40rpx;
}

/* 文章预览阶段样式 */
.article-preview {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.article-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  text-align: center;
}

.article-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.article-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 40rpx;
  text-align: justify;
}

.preview-controls {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.primary-btn {
  background-color: #FF9F0A;
  color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(255, 159, 10, 0.2);
}

.secondary-btn {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  border: none;
}

/* 背诵进度条样式 */
.recitation-progress-bar {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  margin-top: 10rpx;
}

/* 背诵提示样式 */
.recitation-hint {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 当前段落提示样式 */
.current-segment {
  background: #fff9e6;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #ffcc00;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.hint-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.hint-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.hint-close {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 30rpx;
  margin: 0;
  display: inline-block;
}

/* 评估结果样式 */
.evaluation-result {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.accuracy {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0 30rpx;
  color: #FF9F0A;
}

.result-section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.section-content {
  font-size: 30rpx;
  line-height: 1.5;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  color: #333;
}

.result-actions {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}

.success-btn {
  background-color: #4cd964;
  color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(76, 217, 100, 0.2);
}

.retry-btn {
  background-color: #ff9500;
  color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(255, 149, 0, 0.2);
}

/* 录音控制区域样式 */
.recording-controls {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 录音状态样式 */
.recording-status {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: rgba(255, 59, 48, 0.1);
  border-radius: 12rpx;
  text-align: center;
}

.recording-time {
  font-size: 32rpx;
  color: #ff3b30;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.recording-limit {
  font-size: 24rpx;
  color: #666;
}

.recording-hint {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 声浪动画 */
.wave-container {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 100rpx;
  margin: 20rpx 0;
  width: 100%;
}

.wave-item {
  width: 12rpx;
  background-color: #FF9F0A;
  margin: 0 8rpx;
  border-radius: 6rpx;
  transition: height 0.1s ease;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 20rpx;
}

.hint-btn {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.hint-btn[disabled] {
  background-color: #f9f9f9;
  color: #ccc;
}

.record-btn {
  background-color: #FF9F0A;
  color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 60rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 159, 10, 0.2);
}

.record-btn.recording {
  background-color: #ff3b30;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

/* 背诵完成阶段样式 */
.recitation-complete {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin: 40rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.complete-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.complete-icon image {
  width: 100%;
  height: 100%;
}

.complete-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4cd964;
  margin-bottom: 20rpx;
}

.complete-message {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.article-info {
  width: 100%;
  border-top: 1px solid #f0f0f0;
  padding-top: 30rpx;
  margin-bottom: 40rpx;
}

.article-language {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: center;
}

.complete-actions {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

/* 简化版背诵页面 */
