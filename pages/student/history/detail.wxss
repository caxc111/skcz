    /* pages/student/history/detail.wxss */
    .container {
      padding: 20rpx;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      background-color: #f8f8f8; /* 淡灰色背景 */
      min-height: 100vh;
      box-sizing: border-box; /* 确保 padding 不会撑大元素 */
    }

    /* 通用卡片样式 */
    .record-info,
    .feedback-section,
    .recognition-section {
      background-color: #ffffff;
      border-radius: 16rpx;
      padding: 30rpx;
      margin-bottom: 30rpx;
      box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    }

    /* 记录信息区域 */
    .info-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15rpx 0;
      border-bottom: 1rpx solid #f0f0f0;
    }

    .info-item:last-child {
      border-bottom: none;
    }

    .label {
      font-size: 28rpx;
      color: #666666;
    }

    .value {
      font-size: 28rpx;
      color: #333333;
      font-weight: 500;
    }

    .value.score {
      font-size: 32rpx;
      color: #ff5c5c; /* 突出显示分数 */
      font-weight: bold;
    }

    /* 通用标题样式 */
    .feedback-section .section-title,
    .recognition-section .section-title {
      font-size: 30rpx;
      color: #333333;
      font-weight: bold;
      margin-bottom: 20rpx;
      padding-bottom: 10rpx;
      border-bottom: 1rpx solid #eee;
    }

    /* 红绿对比内容区域 */
    .feedback-content {
      font-size: 30rpx;
      line-height: 1.8;
      color: #333; /* 默认文字颜色，会被 span 覆盖 */
      white-space: pre-wrap; /* 保留换行和空格 */
      word-break: break-all; /* 允许单词内换行 */
    }

    /* 正确/错误文本样式 */
    .feedback-content .correct {
      color: #28a745; /* 绿色 */
    }

    .feedback-content .error {
      color: #dc3545; /* 红色 */
      font-weight: bold; /* 加粗错误部分 */
    }

    /* 识别结果内容区域 */
    .recognition-content {
      font-size: 30rpx;
      line-height: 1.8;
      color: #555; /* 识别结果用稍浅的颜色区分 */
      white-space: pre-wrap;
      word-break: break-all;
    }

    /* 暂无反馈或加载提示 */
    .no-feedback,
    .loading-error {
      text-align: center;
      color: #999999;
      font-size: 28rpx;
      padding: 40rpx 0;
    }