<view class="container">
  <view class="header">
    <view class="back-button" bindtap="goBack">
      <text class="icon">←</text>
    </view>
    <view class="title">朗读记录</view>
  </view>

  <view class="detail-card" wx:if="{{record}}">
    <view class="article-title">{{record.articleTitle}}</view>
    
    <view class="score-section">
      <view class="score-display">
        <text class="score-number">{{record.score}}</text>
        <text class="score-unit">分</text>
      </view>
      <view class="flower-display">
        <image src="/images/flower.png" wx:for="{{record.flowers}}" wx:key="*this" class="flower-icon"></image>
      </view>
    </view>
    
    <view class="info-section">
      <view class="info-item">
        <text class="info-label">日期</text>
        <text class="info-value">{{record.formattedDate}}</text>
      </view>
      <view class="info-item">
        <text class="info-label">时长</text>
        <text class="info-value">{{record.duration}}秒</text>
      </view>
      <view class="info-item">
        <text class="info-label">语言</text>
        <text class="info-value">{{record.language === 'zh' ? '中文' : '英文'}}</text>
      </view>
    </view>
    
    <block wx:if="{{article}}">
      <view class="section-title">文章内容</view>
      <text class="content-text">{{article.content}}</text>
    </block>
    
    <view wx:else class="missing-article">
      <text class="warning-text">此文章已不存在或已被删除</text>
    </view>
    
    <view class="actions">
      <button class="btn-primary" bindtap="practiceAgain" wx:if="{{article}}">再次练习</button>
      <button class="btn-secondary" bindtap="goBack">返回</button>
    </view>
  </view>
</view> 