/* pages/student/profile/profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 标题区域 */
.header {
  display: flex;
  margin-bottom: 20px;
}

.title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 用户信息区域 */
.user-info-container {
  background-color: #92e242;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(146, 226, 66, 0.2);
}

.user-avatar-container {
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.level-badge {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #fff;
  color: #92e242;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-details {
  margin-left: 30rpx;
  color: #fff;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.btn-login {
  background-color: rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 统计数据区域 */
.stats-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 通用区块容器 */
.section-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #92e242;
}

/* 奖励列表样式 */
.rewards-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reward-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.reward-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.reward-info {
  flex: 1;
}

.reward-title {
  font-size: 28rpx;
  color: #333;
}

.reward-date {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.reward-count {
  font-size: 28rpx;
  color: #92e242;
  font-weight: bold;
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部版权信息 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 加载中状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading {
  color: #999;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}

.invitation-subtitle {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  background-color: #e9fbcc;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  width: 80%;
  margin: 0 auto 20rpx;
}

/* 小红花奖励样式 */
.flower-rewards {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff8f8;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  border: 1rpx dashed #ffcccc;
}

.big-flower-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.flower-info {
  flex: 1;
}

.flower-title {
  font-size: 30rpx;
  color: #ff5252;
  font-weight: bold;
}

.flower-count {
  font-size: 24rpx;
  color: #ff8585;
  margin-top: 6rpx;
}

.view-detail {
  font-size: 24rpx;
  color: #999;
}

/* 烟花动画容器 */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  pointer-events: none;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.firework {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  opacity: 0;
  transform: scale(0.3);
  animation: explode 1.5s ease-out forwards;
  filter: brightness(1.2);
}

@keyframes explode {
  0% {
    transform: scale(0.1);
    opacity: 0;
    filter: brightness(1);
  }
  10% {
    opacity: 0.3;
    filter: brightness(1.5);
  }
  30% {
    opacity: 0.8;
    filter: brightness(1.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
    filter: brightness(1.5);
  }
  75% {
    opacity: 0.8;
    filter: brightness(1.3);
  }
  100% {
    transform: scale(1.8);
    opacity: 0;
    filter: brightness(1);
  }
}