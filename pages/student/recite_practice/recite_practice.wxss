.article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.article-title {
  font-size: 20px;
  font-weight: bold;
}

/* 测试模式开关样式 */
.test-mode-switch {
  display: flex;
  align-items: center;
  margin: 5px 0;
  padding: 6px;
  background-color: #f8f8f8;
  border-radius: 8px;
  font-size: 14px;
}

.test-mode-switch text {
  margin-left: 10px;
  color: #666;
}

.test-mode-tip {
  margin-left: auto;
  font-size: 12px;
  color: #ff9500;
}

/* 设置栏样式 */
.settings-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
  padding: 8px 12px;
  background-color: #f8f8f8;
  border-radius: 8px;
  font-size: 14px;
}

.api-switch {
  display: flex;
  align-items: center;
}

.api-mode {
  margin-left: 8px;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 500;
}

.api-mode.mock {
  background-color: #e0e0e0;
  color: #666;
}

.api-mode.real {
  background-color: #aff157;
  color: #333;
}

.settings-button {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.settings-button .icon {
  font-size: 18px;
}

.container {
  padding: 15px;
  display: flex;
  flex-direction: column;
}

.article-content {
  background-color: #ffffff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  line-height: 1.6;
  font-size: 16px;
  /* min-height: 30vh; */ /* 移除最小高度限制 */
  /* max-height: 38vh; */ /* 移除最大高度限制 */
  /* overflow-y: auto; */ /* 移除滚动 */
}

/* 文章信息样式 */
.article-info {
  display: flex;
  justify-content: space-between;
  padding: 8px 12px;
  margin-bottom: 15px;
  background-color: #f8f8f8;
  border-radius: 8px;
  font-size: 14px;
}

.info-item {
  display: flex;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: 500;
  margin-left: 5px;
}

.reading-controls {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
}

.record-hint {
  margin-bottom: 10px;
  color: #666;
}

.record-hint.recording {
  color: #ff4d4f;
  font-weight: 500;
}

.record-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 16px;
}

.record-time-limit {
  font-size: 12px;
  color: #999;
  margin: 5px 0 10px;
}

.progress-bar-bg {
  width: 100%;
  height: 6px;
  background-color: #f0f0f0;
  border-radius: 3px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #ff4d4f;
  border-radius: 3px;
  transition: width 0.3s linear;
}

/* 声浪动画样式 */
.wave-container {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 40px;
  margin: 5px 0;
  gap: 5px;
}

.wave-item {
  width: 8px;
  background-color: #aaa; /* 默认颜色为灰色 */
  border-radius: 4px;
  transition: height 0.1s ease, background-color 0.3s ease;
}

/* 录音状态下声浪颜色 */
.reading-controls .recording ~ .wave-container .wave-item { /* 修正选择器 */
  background-color: #ff4d4f; /* 录音时为红色 */
}

.record-button {
  width: 54px;
  height: 54px;
  background-color: #aff157;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5px;
}

.record-button.recording {
  background-color: #ff4d4f;
}

.record-button image {
  width: 28px;
  height: 28px;
}

/* 结果弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.result-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.result-title {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}

.score-display {
  display: flex;
  justify-content: center;
  align-items: baseline;
  margin-bottom: 10px;
}

.score-number {
  font-size: 36px;
  font-weight: bold;
  color: #ff4d4f;
}

.score-unit {
  font-size: 16px;
  margin-left: 5px;
  color: #666;
}

.result-flowers {
  display: flex;
  justify-content: center;
  margin-bottom: 15px;
}

.flower-icon {
  width: 24px;
  height: 24px;
  margin: 0 3px;
}

.result-feedback {
  text-align: center;
  margin-bottom: 20px;
  color: #333;
  font-size: 14px;
  min-height: 20px;
}

.error-display,
.recognized-text,
.result-detail {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #f8f8f8;
  border-radius: 8px;
}

.error-title,
.recognized-title,
.detail-label {
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 8px;
  color: #333;
}

.error-content,
.recognized-content {
  font-size: 14px;
  line-height: 1.5;
  color: #666;
  max-height: 100px;
  overflow-y: auto;
}

.error-content .correct {
  color: #4CAF50; /* 正确发音颜色 */
}

.error-content .error {
  color: #ff4d4f; /* 错误发音颜色 */
  text-decoration: underline;
  font-weight: bold;
}

.error-hint,
.recognized-hint {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 5px;
}

.detail-label {
  color: #666;
}

.detail-value {
  color: #333;
  font-weight: 500;
}

.result-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 25px;
}

.btn-primary,
.btn-secondary {
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  cursor: pointer;
  min-width: 100px;
  text-align: center;
}

.btn-primary {
  background-color: #aff157;
  color: #333;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
}


/* 标签样式 */
.lang-tag {
  padding: 2px 8px;
  font-size: 12px;
  border-radius: 4px;
  margin-left: 8px;
  color: #fff;
}

.lang-tag.zh {
  background-color: #ff9500; /* 橙色 */
}

.lang-tag.en {
  background-color: #007aff; /* 蓝色 */
}


/* 通用按钮样式 */
.primary-btn {
  background-color: #aff157;
  color: #333;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
}

.secondary-btn {
  background-color: #f0f0f0;
  color: #666;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 14px;
  margin-left: 10px;
}

/* 文章动作按钮调整 */
.article-actions {
  display: flex;
  justify-content: flex-end; /* 将按钮推到右侧 */
  margin-top: 10px;
}

.action-btn {
  margin-left: 10px; /* 按钮间距 */
  padding: 6px 12px;
  font-size: 13px;
  border-radius: 15px;
}

.action-btn.reading {
  background-color: #e0f7fa; /* 淡蓝色背景 */
  color: #007aff;
}

.action-btn.recitation {
  background-color: #fff3e0; /* 淡橙色背景 */
  color: #ff9500;
}



