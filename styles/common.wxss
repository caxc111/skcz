/* 公共颜色变量 */
page {
  --primary-color: #FF9F0A;
  --secondary-color: #57b2ff;
  --accent-color: #aff157;
  --text-color: #333333;
  --text-secondary: #666666;
  --text-light: #999999;
  --background-color: #f8f8f8;
  --white: #ffffff;
  --border-color: #eeeeee;
  --error-color: #ff4d4f;
  --success-color: #52c41a;
}

/* 常用布局 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: var(--background-color);
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.space-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

/* 卡片样式 */
.card {
  background-color: var(--white);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 30rpx;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--white);
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: var(--white);
}

.btn-outline {
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  background-color: transparent;
}

.btn-small {
  height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 30rpx;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

/* 表单样式 */
.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  background-color: var(--white);
  border-radius: 8rpx;
  padding: 0 20rpx;
  border: 2rpx solid var(--border-color);
  font-size: 28rpx;
}

.form-textarea {
  background-color: var(--white);
  border-radius: 8rpx;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  font-size: 28rpx;
  min-height: 200rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: var(--border-color);
  margin: 20rpx 0;
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: rgba(255, 159, 10, 0.1);
  color: var(--primary-color);
}

.tag-secondary {
  background-color: rgba(87, 178, 255, 0.1);
  color: var(--secondary-color);
}

/* 进度条样式 */
.progress-bar {
  height: 10rpx;
  background-color: var(--border-color);
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-bar-inner {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 5rpx;
}

/* 头像和用户信息样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-color);
}

/* 底部安全区域 */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 提示信息 */
.tip {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 错误信息 */
.error-text {
  font-size: 24rpx;
  color: var(--error-color);
  margin-top: 8rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-state-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: var(--text-light);
}